<form id="searchFormOrganization" role="form" method="post" action="/interface/modules/custom_modules/oe-module-npi-registry/public/search" >
    <div class="row my-2">
        <div class="form-group">
            <label for="organizationName">Organization Name (LBN, DBA, Former LBN or Other Name)</label>
            <input type="text" name="organizationName" value="{{ searchParamsOrEmpty.organizationName }}" class="form-control" id="organizationName" >
        </div>
        <input type="hidden" name="npiType" value="NPI-2" class="form-control" id="npiType" >
    </div>
    <div class="row my-2 justify-content-center">
        <div class="col-1">
            <p class="d-inline-flex gap-1">
                <a data-bs-toggle="collapse" href="#collapseOrganizationExtraField" role="button" aria-expanded="false" aria-controls="collapseOrganizationExtraField">
                    <i class="bi bi-plus-circle"></i>
                </a>
            </p>
        </div>
        <div class="collapse" id="collapseOrganizationExtraField">
            <div class="card card-body">
                {# LOCATION #}
                <div class="row ">
                    <div class="col">
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" name="city" value="{{ searchParamsOrEmpty.city }}" class="form-control" id="city" >
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="state">State</label>
                            <input type="text" name="state" value="{{ searchParamsOrEmpty.state }}" class="form-control" id="state" >
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" name="country" value="{{ searchParamsOrEmpty.country }}" class="form-control" id="country" >
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="postalCode">Postal Code</label>
                            <input type="text" name="postalCode" value="{{ searchParamsOrEmpty.postalCode }}" class="form-control" id="postalCode" >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-2 my-3">
            <button id=sendsearchFormOrganization type="submit" class="btn btn-info" title="Search">
                <i class="bi bi-search"></i>
            </button>
            <button type="reset" class="btn btn-warning" title="Reset">
                <i class="bi bi-x-circle"></i>
            </button>
        </div>
    </div>
</form>
