{% extends 'base-layout-tbs-5.html.twig' %}

{% block body %}
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-8">
                <h3 class="text-center m-3">About NPI Register module</h3>

                <div class="row my-3">
                    <div class="col-3 text-start">Module Version:</div><div class="col text-end">{{ module.version }}</div>
                </div>
                <div class="row my-3">
                    <div class="col-3 text-start">License:</div>
                    <div class="col text-end">
                        <a href="{{ module.license_url }}" target="_blank">{{ module.license }}</a>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-3 text-start">Vendor:</div>
                    <div class="col text-end">
                        <a href="{{ module.vendor_url }}" target="_blank">{{ module.vendor_name }}</a>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-3 text-start">Online support:</div>
                    <div class="col text-end">
                        <a href="{{ module.source_code }}/issues" target="_blank">{{ module.source_code }}/issues</a>
                    </div>
                </div>
                <div class="row mt-5">
                    <a href="#" target="_blank" class="btn btn-outline-primary btn-md d-block m-1 text-start" role="button">
                        <i class="bi bi-journal"></i> User Manual
                    </a>
                    <a href="https://github.com/MedicalMundi/oe-module-npi-registry/discussions/categories/ideas" target="_blank" class="btn btn-outline-primary btn-md d-block m-1 text-start" role="button">
                        <i class="bi bi-lightbulb-fill"></i> Suggest a new feature
                    </a>
                    <a href="#" target="_blank" class="btn btn-outline-success btn-lg d-block m-1 text-start" role="button">
                        <i class="bi bi-heart-fill"></i> Donate
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

